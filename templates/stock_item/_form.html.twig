{% block body %}

<style>
.form-wrapper{
    font-family: "Playfair Display", serif;
    background:black;
    position:absolute;
    top:50%;
    left:50%;
    transform:translate(-50%, -50%);
    width:50%;
    padding:30px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.9);
    border-radius:5px;
}

.form-control{
    display:flex;
    justify-content:space-between;
}

.form_widget{
    padding:5px;
    width:70%;
    margin-bottom:5px;
}
label{
    font-size:1.1em;
    letter-spacing:0.1em;
}

.btn-delete{
    position:absolute;
    top:65%;
    left:35%;
    transform:translate(-65%; -35%)
}
</style>
<div class = "form-wrapper">
{{ form_start(form) }}
    <div class = "form-control">
        {{form_label(form.name, null, {'attr': {'class': 'form_label'}})}}
        {{form_widget(form.name, {'attr': {'class': 'form_widget'}})}}
    </div>

    <div class = "form-control">
        {{form_label(form.quantity, null, {'attr': {'class': 'form_label'}})}}
        {{form_widget(form.quantity, {'attr': {'class': 'form_widget'}})}}
    </div>

    <div class = "form-control">
        {{form_label(form.price, null, {'attr': {'class': 'form_label'}})}}
        {{form_widget(form.price, {'attr': {'class': 'form_widget'}})}}
    </div>

    <div class = "form-control">
        {{form_label(form.description, null, {'attr': {'class': 'form_label'}})}}
        {{form_widget(form.description, {'attr': {'class': 'form_widget'}})}}
    </div>

     <div class = "form-control">
        {{form_label(form.createdAt, null, {'attr': {'class': 'form_label'}})}}
        {{form_widget(form.createdAt, {'attr': {'class': 'form_widget'}})}}
    </div>

    <div class = "form-control">
        {{form_label(form.updatedAt, null, {'attr': {'class': 'form_label'}})}}
        {{form_widget(form.updatedAt, {'attr': {'class': 'form_widget'}})}}
    </div>

    {# {{ form_widget(form) }} #}
    <button class="btn">{{ button_label|default('Save') }}</button>
   
    
{{ form_end(form) }}

    <form action ="{{ path('app_stock_item_index') }}" method="">
        <button type = "submit" id = "save">Back to list</button>
    </form>

