{% extends 'base.html.twig' %}

{% block title %}Hello UserLoginController!{% endblock %}

{% block bootstrap %}
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
<style>
    body {
        margin: 0;
        padding: 0;
        background: #1D6589;
        color: #fff;
        font-family: "Playfair Display", serif;
    }
    .example-wrapper {
        background: #134F5C;
        width: 600px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        border-radius: 6px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 1)
    }

    .form-group{
        display:flex;
        justify-content:space-between;
        padding:10px;
    }

    .form-control{
        padding:5px;
        width:70%;
    }

    label{
        font-size:1.1em;
    }

    button{
        background: #0B5394;
        color:#fff;
        padding: 10px 30px;
        font-family: "Playfair Display", serif;
        font-size:1.1em;
        cursor:pointer;
        border:none;
        margin-top:10px;
        letter-spacing:0.1em;

    }
</style>

<div class="example-wrapper">
    <h3>Welcome to Login page.</h3>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.email, null, {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="form-group">
        {{ form_label(form.password, null, {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.password) }}
    </div>

     {{ form_rest(form) }}
    {# success login message  #}

    {% for label, messages in app.flashes %}
        <div class = "display-message {{ label|upper }}">
            {% for message in messages %}
                {{message}}
            {% endfor %}
        </div>
    {% endfor %}

    <button type="submit" class="btn btn-primary">Login</button>

    <form action="{{ path('app_user_registration') }}" method="">
        <button type="button" class="registration">Go to registration</button>
    </form>

    {{ form_rest(form) }}

    {{ form_end(form) }}
</div>

<!-- Bootstrap JS and Popper.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

<script>
    document.querySelector('.registration').addEventListener('click', function(){
        window.location.href = "{{ path('app_user_registration') }}";
    })
</script>

{% endblock %}

